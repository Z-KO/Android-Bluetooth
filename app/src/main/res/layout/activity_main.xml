<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_turn_on"
        android:text="On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_turn_off"
        android:text="Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_scan"
        android:text="Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="STATUS"
            android:padding="10dp"
            android:id="@+id/main_status_text_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_status_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_status_text_static"/>
        <ProgressBar
            android:id="@+id/main_status_scan_progressbar"
            android:indeterminate="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/main_status_text"
            android:layout_below="@id/main_status_text_static"
            android:visibility="gone"/>
        <Button
            android:text="Disconnect"
            android:id="@+id/btn_disconnect"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_status_text"
            android:visibility="gone"/>
        <Button
            android:text="Send 1"
            android:id="@+id/btn_send1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_status_text"
            android:layout_toRightOf="@id/btn_disconnect"
            android:visibility="gone"/>
        <Button
            android:text="Send 0"
            android:id="@+id/btn_send2"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_status_text"
            android:layout_toRightOf="@id/btn_send1"
            android:visibility="gone"/>

    </RelativeLayout>



</LinearLayout>

